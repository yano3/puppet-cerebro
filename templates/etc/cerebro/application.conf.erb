secret = "<%= @secret %>"
basePath = "<%= @basepath %>"
pidfile.path = "/var/run/cerebro/cerebro.pid"
rest.history.size = 50
data.path = "/var/cerebro/cerebro.db"
auth = {
}
hosts = [
<% unless @hosts.nil? -%>
<% @hosts.each do |host| -%>
  {
    host = "<%= host['host'] %>"
    name = "<%= host['name'] %>"
    <% if host['auth'] == true  -%>
    auth = {
      username = "<%= host['username'] %>"
      password = "<%= host['password'] %>"
    }
    <% end -%>
  },
<% end -%>
<% end -%>
]
